<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewmodel"
            type="Object" />

        <variable
            name="item"
            type="Object" />

    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
